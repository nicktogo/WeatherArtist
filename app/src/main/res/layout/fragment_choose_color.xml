<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.weatherartist.app.fragment.ChooseColorFragment"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/white"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="64dp"
            android:src="@drawable/color_white"
            />

        <ImageView
            android:id="@+id/red"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="64dp"
            android:src="@drawable/color_red"
            />

        <ImageView
            android:id="@+id/orange"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="64dp"
            android:src="@drawable/color_orange"
            />

        <ImageView
            android:id="@+id/yellow"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="64dp"
            android:src="@drawable/color_yellow"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/grey"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="64dp"
            android:src="@drawable/color_grey"
            />

        <ImageView
            android:id="@+id/blue"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="64dp"
            android:src="@drawable/color_blue"
            />

        <ImageView
            android:id="@+id/teal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="64dp"
            android:src="@drawable/color_teal"
            />

        <ImageView
            android:id="@+id/green"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="64dp"
            android:src="@drawable/color_green"
            />


    </LinearLayout>


</LinearLayout>
