<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jiading"
        android:id="@+id/city_name"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/weather_desc_widget"
        android:layout_marginLeft="30dp"
        android:text="shower"
        android:layout_below="@+id/city_name"
        android:layout_alignStart="@+id/city_name"
        android:layout_marginTop="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12:00"
        android:id="@+id/publish_time_widget"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="20\u2103"
        android:id="@+id/temp1_widget"
        android:layout_alignTop="@+id/weather_desc_widget"
        android:layout_toEndOf="@+id/weather_desc_widget"
        android:layout_marginLeft="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="25\u2103"
        android:id="@+id/temp2_widget"
        android:layout_marginLeft="30dp"
        android:layout_alignTop="@+id/temp1_widget"
        android:layout_toEndOf="@+id/temp1_widget" />


</RelativeLayout>
